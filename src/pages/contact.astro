---
import Layout from "../layouts/MacDesktop.astro";
---

<Layout title="Contact Info">
	<div class="flex flex-col gap-4 p-8">
		<div class="flex flex-col gap-2">
			<h1 class="text-3xl font-bold font-chicago">Contact Information</h1>
			<a
				class="w-fit flex flex-row items-center gap-1 border-2 border-black rounded-md bg-white px-1.5 py-1 text-2xl active:border-white active:bg-black active:text-white disabled:opacity-50"
				href="/"
			>
				<i class="i-fa6-solid:arrow-left"></i>
				Back to Index Page
			</a>
		</div>
		<article class="prose">
			<p class="text-center text-2xl">
				For all inquiries, please send an email to:<br />

				<strong>hi</strong> (at) <strong>ethanlew</strong> (dot)
				<strong>dev</strong>
				<br />
				<i class="i-fa6-solid:envelope-open-text"></i>
				<i class="i-fa6-solid:heart"></i>
			</p>
		</article>
	</div>
</Layout>
