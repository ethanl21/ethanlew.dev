---
interface Props {
	messages: string[];
}

const { messages = [] } = Astro.props;
---

<div
	class="flex w-full flex-col border-0 border-r border-l border-black bg-white"
>
	<div class="flex flex-row flex-wrap items-center justify-between px-4">
		{
			messages.map((message) => (
				<div class="text-md font-[Geneva] leading-loose text-black">
					{message}
				</div>
			))
		}
	</div>

	<div class="mb-0.5 h-px w-full border-b border-black"></div>
</div>
